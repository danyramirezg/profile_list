<p id="notice"><%= notice %></p>

<h1 class="m-3 p-3 font-weight-bold text-primary">Profiles:</h1>

<div class="container container-fluid m-3 p-3">
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Linkedin</th>
      <th scope="col">Github</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.linkedin %></td>
        <td><%= user.github %></td>
        <td class="font-weight-bold"><%= link_to 'Show', user %></td>
        <td class="font-weight-bold"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="font-weight-bold"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
<div class="mx-3 px-3 font-weight-bold text-info">
<%= link_to 'New User', new_user_path %>
</div>